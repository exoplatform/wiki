<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.picketlink.idm.impl.model.hibernate.HibernateIdentityObjectRelationshipName"
         table="jbid_io_rel_name">
    <cache usage="read-write"/>

    <id name="id"
        type="java.lang.Long"
        access="field">
      <column name="ID"/>
      <generator class="native"/>
    </id>
    <property name="name"
              type="java.lang.String"
              access="field"
              lazy="false">
      <column name="NAME"
              not-null="true"
              unique="true"
              unique-key="id"/>
    </property>
    <map name="properties"
         table="jbid_io_rel_name_props"
         cascade="all, delete-orphan"
         lazy="extra"
         fetch="subselect">
      <cache usage="read-write"/>
      <key column="PROP_ID"/>
      <map-key type="string"
               column="PROP_NAME"/>
      <element type="string"
               column="PROP_VALUE"
               not-null="true"/>
    </map>
    <many-to-one name="realm"
                 class="org.picketlink.idm.impl.model.hibernate.HibernateRealm"
                 access="field"
                 fetch="select"
                 lazy="proxy">
      <column name="REALM"
              not-null="true"
              unique-key="id"/>
    </many-to-one>

  </class>
</hibernate-mapping>
